<Window x:Class="WpfQuery.AddParamDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddParamDialog" Height="180" Width="250" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right">键：</TextBlock>
        <TextBox Name="txtKey" Margin="10,3,3,3" Grid.Row="0" Grid.Column="1" Padding="0,8,0,0"/>
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right">值：</TextBlock>
        <TextBox Name="txtValue"  Margin="10,3,3,3" Grid.Row="1" Grid.Column="1" Padding="0,8,0,0"/>
        <Button Name="btnAdd" Content="添加"  Margin="20,10,20,10" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Click="btnAdd_Click"/>
    </Grid>
</Window>
